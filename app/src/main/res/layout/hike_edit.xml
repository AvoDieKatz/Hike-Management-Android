<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/hike_edit_layout"
    android:visibility="gone">

    <TextView android:id="@+id/add_hike_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="10sp"
        android:text="Edit Hike"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView android:id="@+id/lbl_hike_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Title"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/hike_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Title"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="2"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView android:id="@+id/lbl_hike_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Location"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/hike_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Location"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView android:id="@+id/lbl_hike_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Date"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/hike_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Date"
        android:textSize="16sp"
        android:inputType="date" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView android:id="@+id/lbl_hike_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Length"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/hike_length_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Length"
        android:inputType="number|numberDecimal"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView android:id="@+id/lbl_hike_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Difficulty"
        android:textSize="16sp"
        />

    <RadioGroup
        android:id="@+id/hike_difficulty_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rad_easy_difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Easy" />

        <RadioButton
            android:id="@+id/rad_medium_difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/rad_hard_difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hard" />
    </RadioGroup>

    <!--    <Spinner-->
    <!--        android:id="@+id/hikeDifficulty"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content" />-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView android:id="@+id/lbl_hike_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:text="Description (Optional)"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/hike_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Description (Optional)"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="3"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <CheckBox
        android:id="@+id/hike_parking_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Parking" />

    <Button
        android:id="@+id/edit_save_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_check"
        android:text="Save"
        />

    <Button
        android:id="@+id/edit_cancel_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/error"
        android:drawableLeft="@drawable/ic_cancel"
        android:text="Cancel"
        android:textColor="@color/white"/>

</LinearLayout>